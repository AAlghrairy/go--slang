{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"]
    },
    "target": "ES2020"
  }
}
